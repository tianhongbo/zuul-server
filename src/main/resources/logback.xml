<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
  <property name="PROJECT_NAME" value="huami.zuul" />
  <property name="PATH_DIR" value="/var/log/huami" />

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}\t%p\t[%t]\t%c{100}\t%X\t%m%n</pattern>
    </encoder>
  </appender>
  <appender name="info"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${PATH_DIR}/${PROJECT_NAME}.log</file>
    <rollingPolicy
      class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${PATH_DIR}/${PROJECT_NAME}-%i.log.gz</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>50</maxIndex>
    </rollingPolicy>
    <triggeringPolicy
      class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>50MB</maxFileSize>
    </triggeringPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}\t%p\t[%t]\t%c{100}\t%X\t%m%n</pattern>
    </encoder>
  </appender>
  <!-- Asynchronous writing log can improve the performance. (0, 512) is the best setting -->
  <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
    <discardingThreshold>0</discardingThreshold>
    <queueSize>512</queueSize>
    <appender-ref ref="info" />
  </appender>
  <root level="info">
    <appender-ref ref="ASYNC" />
    <appender-ref ref="console" />
  </root>
</configuration>